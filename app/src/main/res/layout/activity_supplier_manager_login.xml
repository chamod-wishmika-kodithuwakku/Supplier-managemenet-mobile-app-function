<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181F22"
    tools:context=".SupplierManagerLogin">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="110dp"
        android:layout_marginTop="44dp"
        android:text="Supplier Manager Login"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/smUserName"
        android:textColorHint="@color/white"
        android:layout_width="301dp"
        android:layout_height="62dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="68dp"
        android:hint="Supplier Manager Name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/smPassword"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="96dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsignin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="224dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#A1FF9800"/>
</androidx.constraintlayout.widget.ConstraintLayout>